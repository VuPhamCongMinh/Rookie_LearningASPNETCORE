@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="MyProfile">Hello @User.Identity.Name</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="SignOut">Logout</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="SignIn">Login</a>
    </li>
}
